<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <log4net>
    <root>
      <priority value="Info"/>
      <appender-ref ref="RollingFileAppender"/>
    </root>

    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\\nhiberbate3sample-log-file.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <maxSizeRollBackups value="14" />
      <maximumFileSize value="15000KB" />
      <datePattern value="yyyyMMdd" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="{%level}%date{MM/dd HH:mm:ss} - %message%newline"/>
      </layout>
    </appender>
  </log4net>

  <connectionStrings>
    <add name="NHibernate3Sample"
       connectionString="Data Source=.; Initial Catalog=NHibernate3Sample;Persist Security Info=True;User ID=sa;Password=123456"
       providerName="System.Data.SqlClient"/>
  </connectionStrings>
</configuration>